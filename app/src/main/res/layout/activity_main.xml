<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="photopicker.demo.zzq.com.photopicker.MainActivity">

    <photopicker.demo.zzq.com.photopicker.view.CircleImageView
        android:id="@+id/civ_headPortrait"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_camera"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="调取相册"
        android:id="@+id/btn_photo"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/civ_headPortrait"
        android:layout_alignRight="@+id/civ_headPortrait"
        android:layout_alignEnd="@+id/civ_headPortrait"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:layout_below="@+id/btn_photo"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:columnWidth="20dp"
        android:numColumns="3"
        android:layout_marginTop="50dp"/>
</RelativeLayout>
